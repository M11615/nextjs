{
  "name": "core",
  "private": true,
  "scripts": {
    "python:venv": "python -m venv ./.venv",
    "python:pip-upgrade": "python ./python_runner.py -m pip install --upgrade pip",
    "python:compile": "python ./python_runner.py -m piptools compile --output-file=./requirements.txt ./requirements.in",
    "python:compile-update": "python ./python_runner.py -m piptools compile --upgrade --output-file=./requirements.txt ./requirements.in",
    "python:install:windows": "python ./python_runner.py -m pip install -r ./requirements.txt",
    "python:install:unix": "TMPDIR=~/tmp python ./python_runner.py -m pip install -r ./requirements.txt",
    "python:sync:windows": "python ./python_runner.py -m piptools sync ./requirements.txt",
    "python:sync:unix": "TMPDIR=~/tmp python ./python_runner.py -m piptools sync ./requirements.txt",
    "dev": "python ./python_runner.py -m fastapi dev ./src/main.py",
    "python:wheel:windows": "python ./python_runner.py -m pip wheel -w ./.wheelhouse -r ./requirements.txt",
    "python:wheel:unix": "TMPDIR=~/tmp python ./python_runner.py -m pip wheel -w ./.wheelhouse -r ./requirements.txt"
  }
}
